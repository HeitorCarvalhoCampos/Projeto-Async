<div class="container mt-5">
  <div class="card bg-dark text-light border-secondary shadow-lg mx-auto" style="max-width: 700px;">
    <div class="card-body">

      <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
          <h1 class="card-title text-info mb-0">{{idea.title}}</h1>
          <p class="text-light mb-0">
            <small>por <strong>{{idea.authorId.name}}</strong></small>
          </p>
        </div>

        <div class="text-end">
          {{#if idea.category}}
            <span class="badge bg-info text-dark me-2">
              {{idea.category}}
            </span>
          {{/if}}
          <span class="badge bg-success">
            {{idea.voteCount}} votos
          </span>
        </div>
      </div>

      <p class="mt-3 fs-5">
        {{idea.description}}
      </p>

      <div class="mt-4 d-flex flex-wrap gap-2">
        <form action="/ideas/vote/{{idea._id}}" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-outline-success btn-lg px-4">
            üëç Votar
          </button>
        </form>

        {{!-- ‚úÖ S√≥ mostra se o usu√°rio logado for o autor --}}
        {{#if (eq user._id idea.authorId._id)}}
          <a href="/ideas/edit/{{idea._id}}" class="btn btn-warning btn-lg px-4">
            Editar
          </a>

          <form action="/ideas/delete/{{idea._id}}" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-lg px-4">
              Excluir
            </button>
          </form>
        {{/if}}

        <a href="/ideas" class="btn btn-outline-light btn-lg px-4 ms-auto">
          ‚Üê Voltar
        </a>
      </div>
    </div>
  </div>
</div>
